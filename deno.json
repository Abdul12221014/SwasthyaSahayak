{
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-read --import-map import_map.json src/backend/server.ts",
    "dev": "deno run --allow-net --allow-env --allow-read --watch --import-map import_map.json src/backend/server.ts",
    "test": "deno test src/backend/tests/ --allow-net --allow-env --import-map import_map.json",
    "test:ml": "python -m pytest src/ml/tests/ -v",
    "test:e2e": "deno test src/backend/tests/e2e.*.test.ts --allow-net --allow-env --import-map import_map.json",
    "test:all": "deno test src/backend/tests/ --allow-net --allow-env --import-map import_map.json && python -m pytest src/ml/tests/ -v"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": ["src/backend/"],
    "exclude": ["src/frontend/", "src/ml/"]
  }
}
